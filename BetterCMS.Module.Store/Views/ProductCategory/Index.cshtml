@using BetterCms.Module.Root.Content.Resources
@using BetterCms.Module.Root.Mvc.Grids.Extensions
@using BetterCms.Module.Root.Mvc.Grids.TableRenderers
@using BetterCms.Module.Root.Mvc.Helpers
@using BetterCMS.Module.Store.Controllers
@using BetterCMS.Module.Store.ViewModels
@using MvcContrib.UI.Grid
@using Microsoft.Web.Mvc;
@model BetterCms.Module.Root.ViewModels.SiteSettings.SearchableGridViewModel<ProductCategoryViewModel>
@{
    Action<ColumnBuilder<ProductCategoryViewModel>> columns = column =>
    {
        column.EditButtonColumn();

        column.For(m => string.Format("<a class=\"bcms-tables-link bcms-grid-item-edit-button bcms-category-name\">{0}</a>", m.Name))
            .Named("Category Name")
            .SortColumnName("Name")
            .Encode(false);

        column.For(m => m.ParentId)
           .Named("Parent Category")
           .SortColumnName("ParentId")
           .Attributes(@class => "bcms-category-parentId");

        column.DeleteButtonColumn();
    };
}

@using (Html.BeginForm<ProductCategoryController>(f => f.Index(null), FormMethod.Post, new { @id = "bcms-categories-form", @class = "bcms-ajax-form" }))
{
    @Html.HiddenGridOptions(Model.GridOptions)
    <div class="bcms-top-block-holder">
        <div class="bcms-btn-links-main" id="bcms-create-category-button">Add New</div>
        <div class="bcms-search-block">
            @Html.TextBoxFor(m => m.SearchQuery, new { @class = "bcms-editor-field-box", @placeholder = RootGlobalization.WaterMark_Search })
            <div class="bcms-btn-search" id="bcms-categories-search-btn"></div>
        </div>
        <div class="bcms-featured-grid bcms-clearfix">
            @Html.RenderPaging(Model)
        </div>
    </div>

    @Html.SiteSettingsMessagesBox("bcms-categories-messages")
    @Html.Grid(Model.Items).Sort(Model.GridOptions).Columns(columns).Attributes(@class => "bcms-tables").RenderUsing(new EditableHtmlTableGridRenderer<ProductCategoryViewModel>())
}
<script type="text/html" id="bcms-categories-list-row-template">
    @Html.Grid(new List<ProductCategoryViewModel> { new ProductCategoryViewModel() }).Columns(columns).Attributes(@class => "bcms-tables").RenderUsing(new HtmlTableGridSingleRowRenderer<ProductCategoryViewModel>())
</script>
